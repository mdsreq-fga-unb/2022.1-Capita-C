{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDirs": ["./src", "./tests"],
    "outDir": "./build",
    "resolveJsonModule":true
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
