// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator docs {
  provider = "node node_modules/prisma-docs-generator"
  output   = "../docs/prismaModels"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  cpf             String  @id
  password        String
  name            String
  email           String
  isAdmin         Boolean @default(false)
  isConsultor     Boolean @default(false)
  isTelemarketing Boolean @default(true)
  status          Boolean @default(true)
  // Lembrar de que nós teremos que validar nos controles os níveis de permissão
}

model CadastroCnpj {
  cnpjFinal                 String           @id
  identificadorMatrizFiliar String
  nomeFantasia              String?
  cnaes                     Cnae[]
  tipoLogradouro            String?
  logradouro                String?
  numero                    String?
  complemento               String?
  bairro                    String?
  cep                       Int
  unidadeFederativa         String
  municipio                 String
  telefone                  Telefone[]
  correioEletronico         Email[]
  atribuido                 Boolean          @default(false)
  parceriaAceita            SituacaoParceria @default(Processando)
}

model Cnae {
  cnae         Int            @id
  cadastroCnpj CadastroCnpj[]
}

model Telefone {
  numeroTelefone BigInt         @id
  origemTelefone String?
  cadastroCnpj   CadastroCnpj[]
}

model Email {
  email        String         @id
  origemEmail  String?
  cadastroCnpj CadastroCnpj[]
}

enum SituacaoParceria {
  Aceita
  Processando
  NaoConseguiuFazerContato
  NaoAceita
}
