// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator docs {
  provider = "node node_modules/prisma-docs-generator"
  output   = "../docs/prismaModels"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email    String @id
  password String
  name     String
}

model CadastroCnpj {
  cnpjFinal                         String  @id @unique
  identificadorMatrizFiliar         String   
  nomeFantasia                      String?
  cnaes                             Cnae[]
  tipoLogradouro                    String?
  logradouro                        String?
  numero                            String?
  complemento                       String?
  bairro                            String?
  cep                               Int 
  unidadeFederativa                 String
  municipio                         String
  dddPrincipal                      String?
  numeroPrincipal                   String?
  dddSecundario                     String?
  numeroSecundario                  String?
  correioEletronico                 String?
}

model Cnae{
  cnae                              Int  @id @unique
  cnpj                              String
  cadastroCnpj                      CadastroCnpj @relation(fields: [cnpj], references: [cnpjFinal   ], onDelete: Cascade)
}